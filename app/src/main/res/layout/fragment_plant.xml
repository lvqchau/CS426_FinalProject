            android:id="@+id/plant10"
            android:layout_width="8dp"
            android:layout_height="20dp"
            app:cardCornerRadius="4dp"
            android:layout_marginHorizontal="2dp"
            app:cardBackgroundColor="#DDB87E"
            app:cardElevation="0dp"/>



    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textAlignment="center"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="210dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:fontFamily="@font/pop_reg"
                android:text="You have planted"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/total_plant_count"
                android:textColor="#9AC423"
                android:textSize="18sp"
                android:fontFamily="@font/pop_med"
                android:layout_height="wrap_content"
                android:text="0"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/pop_reg"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:text="trees"/>


        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="248dp"
        android:layout_marginTop="490dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <ImageButton
                android:id="@+id/btn_spring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:src="@drawable/ic_btn_spring" />
            <ImageButton
                android:id="@+id/btn_summer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/ic_btn_summer_black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btn_fall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:src="@drawable/ic_btn_fall_black" />

            <ImageButton
                android:id="@+id/btn_winter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/ic_btn_winter_black" />
        </LinearLayout>
    </LinearLayout>
    <com.example.planter.MyPot
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>